DEF NAVIGATION_INFO NavigationInfo {
  # Eteindre lumiere
  headlight FALSE 
  # Dimension du personnage virtuel
  avatarSize [.25 .8 .7]
}

DEF PYRAMID_INTERIOR Transform {
  # Intercaller l'interieur avec la pyramide
  translation 0 0 11
  children [
    Inline {
      url "../Interieur/Interieur.wrl"
    }
  ]
}

DEF PYRAMID_EXTERIOR Transform {
  children [
    Inline {
      url "../Exterieur/Exterieur.wrl"
    }
  ]
}

DEF INSIDE_PRIMARY_ROOM Viewpoint { 
  position 0 1 0
  description "Piece Principale"
  jump FALSE
}

DEF OUTSIDE_FRONT Viewpoint { 
  position 0 1 9
  description "Porche"
  jump FALSE
}

DEF OUTSIDE_TOP_LEVEL Viewpoint { 
  position 10 10 10
  orientation -1 2 0 .7
  description "Vue globale"
  jump FALSE
}

DEF INSIDE_SECRET_ROOM Viewpoint { 
  position 0 1 -12
  description "Piece Secrete"
  jump FALSE
}